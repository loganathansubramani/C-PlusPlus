#include<iostream>
using namespace std;
int main()
{
    int a,i,j;
    cin>>a;
    cout<<"*"<<endl;
    for(i=1;i<=a;i++)
    {
        cout<<"*";
        for(j=1;j<=i;j++)
        {
            cout<<j;
        }
        for(j=i-1;j>=1;j--)
        {
            cout<<j;
        }
        cout<<"*";
        cout<<endl;
    }
    for(i=a-1;i>=1;i--)
    {
        cout<<"*";
        for(j=1;j<=i;j++)
        {
            cout<<j;
        }
        for(j=i-1;j>=1;j--)
        {
            cout<<j;
        }
        cout<<"*";
        cout<<endl;
    }
    cout<<"*";
}
