#include <iostream> 
using namespace std; 
int main() 
{
int N; cin >> N; 
char alpha='a'; 
for(int row = 1; row <= N; row++) 
{
for(int hyphenCtr = 1; hyphenCtr <= N-row; hyphenCtr++) 
{
cout << '-'; 
}
for(int col = 1 ; col <= row; col++) 
{
cout << alpha--; 
}
alpha=alpha+(row+1) ; 
cout << endl; 
}
return 0; 
}
